<Page
    x:Class="AuroraDialogEnhancer.Frontend.Forms.About.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:about="clr-namespace:AuroraDialogEnhancer.Frontend.Forms.About"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:localization="clr-namespace:AuroraDialogEnhancer.Properties.Localization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:AuroraDialogEnhancer.Properties"
    xmlns:statics="clr-namespace:AuroraDialogEnhancer.AppConfig.Statics"
    xmlns:updater="clr-namespace:AuroraDialogEnhancer.AppConfig.Updater"
    xmlns:woControls="clr-namespace:WhyOrchid.Controls;assembly=WhyOrchid"
    xmlns:woProperties="clr-namespace:WhyOrchid.Properties;assembly=WhyOrchid"
    Title="AboutPage"
    d:Background="{Binding Source={x:Static woProperties:Settings.Default}, Path=Color_Background, Mode=OneTime}"
    d:DesignHeight="1200"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Page.Resources>

    <woControls:ScrollViewer IsInnerScrollbarsArrangement="True" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="800" Margin="55,22,55,25">

            <!--  Version info  -->
            <StackPanel Margin="0,0,0,25">

                <!--  Title  -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource CardTitle}"
                        Text="{x:Static localization:Resources.About_VersionInfo}" />

                    <StackPanel
                        Grid.Column="1"
                        Margin="0,0,0,5"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">

                        <woControls:ComboBox
                            x:Name="ComboBoxUpdateFrequency"
                            Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                            Margin="0,0,5,0"
                            IsMenu="True"
                            PopUpPlacementMode="Bottom"
                            PopupVerticalOffset="3"
                            ToolTip="{x:Static localization:Resources.About_Update_Frequency_ToolTip}">

                            <woControls:ComboBox.Title>
                                <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                                    <woControls:PathIcon
                                        x:Name="PathIconUpdateFrequency"
                                        Margin="0,0,1,0"
                                        Data="{StaticResource I.R.Notifications}"
                                        Style="{StaticResource IconMedium}" />
                                </Grid>
                            </woControls:ComboBox.Title>

                            <ComboBoxItem Content="{x:Static localization:Resources.About_Update_Frequency_Weekly}" Tag="{x:Static updater:EUpdateFrequency.Weekly}" />
                            <ComboBoxItem Content="{x:Static localization:Resources.About_Update_Frequency_EveryTwoWeeks}" Tag="{x:Static updater:EUpdateFrequency.EveryTwoWeeks}" />
                            <ComboBoxItem Content="{x:Static localization:Resources.About_Update_Frequency_Monthly}" Tag="{x:Static updater:EUpdateFrequency.Monthly}" />
                            <ComboBoxItem Content="{x:Static localization:Resources.About_Update_Frequency_None}" Tag="{x:Static updater:EUpdateFrequency.None}" />

                        </woControls:ComboBox>

                        <Grid>
                            <woControls:Button
                                Padding="15,5"
                                HorizontalContentAlignment="Stretch"
                                BorderBrush="{Binding Source={x:Static woProperties:Settings.Default}, Path=Color_OutlineVariant, Mode=OneTime}"
                                BorderThickness="1"
                                Click="Button_Update_OnClick"
                                Style="{StaticResource ButtonTonal}">

                                <StackPanel Orientation="Horizontal">

                                    <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}" Margin="0,1,10,0">
                                        <woControls:PathIcon Data="{StaticResource I.S.RotateLeft}" Style="{StaticResource IconMedium}" />
                                    </Grid>

                                    <TextBlock Style="{StaticResource FontStyleMedium}" Text="{x:Static localization:Resources.About_Update_Update_Verb}" />
                                </StackPanel>
                            </woControls:Button>

                            <Grid
                                x:Name="ContainerUpdateIcon"
                                d:Visibility="Visible"
                                Visibility="{Binding Source={x:Static properties:Settings.Default}, Path=Update_IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <Border
                                    Width="8"
                                    Height="8"
                                    Margin="0,-2,-2,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="{Binding Source={x:Static woProperties:Settings.Default}, Path=Color_Primary, Mode=OneTime}"
                                    CornerRadius="50"
                                    Opacity="1" />

                                <Border
                                    Width="14"
                                    Height="14"
                                    Margin="0,-5,-5,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="{Binding Source={x:Static woProperties:Settings.Default}, Path=Color_Primary, Mode=OneTime}"
                                    CornerRadius="50"
                                    Opacity="0.5" />
                            </Grid>
                        </Grid>
                    </StackPanel>
                </Grid>

                <woControls:CardButton
                    Title="Aurora Dialog Enhancer"
                    MinHeight="55"
                    Click="Button_Link_OnClick"
                    Tag="https://github.com/DigitalE4rth/AuroraDialogEnhancer">

                    <woControls:CardButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.GitHub}" Style="{StaticResource IconLarge}" />
                        </Grid>
                    </woControls:CardButton.LeftIcon>

                    <woControls:CardButton.Description>
                        <TextBlock>
                            <Run Text="{Binding Source={x:Static statics:AppConstants.AssemblyInfo}, Path=Version, Mode=OneTime}" />
                            <Run Text="•" />
                            <Run Text="DigitalE4rth" />
                        </TextBlock>
                    </woControls:CardButton.Description>

                    <woControls:CardButton.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.R.ArrowUpRightFromSquare}" Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardButton.RightIcon>
                </woControls:CardButton>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <ItemsControl x:Name="ContainerExtensionsLeft" Focusable="False">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <woControls:CardButton
                                        Title="{Binding Title}"
                                        MinHeight="55"
                                        Margin="0,5,0,0"
                                        d:DataContext="{d:DesignInstance d:Type=about:ExtensionViewModel,
                                                                         IsDesignTimeCreatable=False}"
                                        Click="Button_Link_OnClick"
                                        Description="{Binding Description}"
                                        Tag="{Binding Link}">

                                        <woControls:CardButton.LeftIcon>
                                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                                                <woControls:PathIcon Data="{StaticResource I.S.PuzzlePiece}" Style="{StaticResource IconLarge}" />
                                            </Grid>
                                        </woControls:CardButton.LeftIcon>

                                        <woControls:CardButton.RightIcon>
                                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                                                <woControls:PathIcon Data="{StaticResource I.R.ArrowUpRightFromSquare}" Style="{StaticResource IconMedium}" />
                                            </Grid>
                                        </woControls:CardButton.RightIcon>
                                    </woControls:CardButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <ItemsControl x:Name="ContainerExtensionsRight" Focusable="False">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <woControls:CardButton
                                        Title="{Binding Title}"
                                        MinHeight="55"
                                        Margin="0,5,0,0"
                                        d:DataContext="{d:DesignInstance d:Type=about:ExtensionViewModel,
                                                                         IsDesignTimeCreatable=False}"
                                        Click="Button_Link_OnClick"
                                        Description="{Binding Description}"
                                        Tag="{Binding Link}">

                                        <woControls:CardButton.LeftIcon>
                                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                                                <woControls:PathIcon Data="{StaticResource I.S.PuzzlePiece}" Style="{StaticResource IconLarge}" />
                                            </Grid>
                                        </woControls:CardButton.LeftIcon>

                                        <woControls:CardButton.RightIcon>
                                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                                                <woControls:PathIcon Data="{StaticResource I.R.ArrowUpRightFromSquare}" Style="{StaticResource IconMedium}" />
                                            </Grid>
                                        </woControls:CardButton.RightIcon>
                                    </woControls:CardButton>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>

                </Grid>
            </StackPanel>

            <!--  Contributors  -->
            <StackPanel Margin="0,0,0,25">
                <!--  Title  -->
                <TextBlock Style="{StaticResource CardTitle}" Text="{x:Static localization:Resources.About_Acknowledgements}" />

                <!--<woControls:CardElement Title="Eric Scofield"
                                        MinHeight="55"
                                        Margin="0,0,0,5"
                                        Description="{x:Static localization:Resources.About_Translation_German}"
                                        ToolTip="(⁠ ⁠≧⁠Д⁠≦⁠)🍻(⁠≧⁠▽⁠≦⁠)">

                    <woControls:CardElement.LeftIcon>
