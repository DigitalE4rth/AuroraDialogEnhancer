<Page x:Class="AuroraDialogEnhancer.Frontend.Forms.KeyBinding.KeyBindingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:behaviour="clr-namespace:AuroraDialogEnhancer.Backend.KeyBinding.Models.Behaviour"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:gameSelector="clr-namespace:AuroraDialogEnhancer.Frontend.Controls.GameSelector"
      xmlns:keyBinding="clr-namespace:AuroraDialogEnhancer.Backend.KeyBinding.Models"
      xmlns:local="clr-namespace:AuroraDialogEnhancer.Frontend.Forms.KeyBinding"
      xmlns:localization="clr-namespace:AuroraDialogEnhancer.Properties.Localization"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:woControls="clr-namespace:WhyOrchid.Controls;assembly=WhyOrchid"
      xmlns:woProperties="clr-namespace:WhyOrchid.Properties;assembly=WhyOrchid"
      d:Background="{Binding Source={x:Static woProperties:Settings.Default}, Path=Color_Background, Mode=OneTime}"
      d:DesignHeight="1450"
      d:DesignWidth="800"
      mc:Ignorable="d">

    <woControls:ScrollViewer IsInnerScrollbarsArrangement="True" VerticalScrollBarVisibility="Auto">
        <StackPanel MaxWidth="800" Margin="55,22,55,25">

            <!--  Title  /  Game Selector  -->
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Title  -->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               VerticalAlignment="Bottom"
                               Style="{StaticResource CardTitle}"
                               Text="{x:Static localization:Resources.KeyBinding_Profile}" />

                    <woControls:ComboBox Grid.Column="1"
                                         Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}"
                                         Margin="3,0,0,5"
                                         d:Background="LightGray"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         IsMenu="True"
                                         PopUpPlacementMode="Bottom"
                                         PopupVerticalOffset="3"
                                         SelectionChanged="ComboBoxSettings_OnSelectionChanged">

                        <woControls:ComboBox.Title>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.S.MoreHorizontal}" Style="{StaticResource IconMedium}" />
                            </Grid>
                        </woControls:ComboBox.Title>

                        <ComboBoxItem Padding="10,0,15,0" Tag="{x:Static local:EKeyBindingSettingsAction.Default}">
                            <ComboBoxItem.Content>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0"
                                          Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}"
                                          Margin="0,0,10,0">
                                        <woControls:PathIcon Data="{StaticResource I.S.RotateLeft}" Style="{StaticResource IconMedium}" />
                                    </Grid>

                                    <TextBlock Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Text="{x:Static localization:Resources.KeyBinding_Settings_Action_Reset}" />
                                </Grid>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>

                        <ComboBoxItem Padding="10,0,10,0" Tag="{x:Static local:EKeyBindingSettingsAction.Clear}">
                            <ComboBoxItem.Content>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0"
                                          Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}"
                                          Margin="0,0,10,0">
                                        <woControls:PathIcon Data="{StaticResource I.S.TrashCan}"
                                                             Foreground="{Binding Source={x:Static woProperties:Settings.Default}, Path=Color_Error, Mode=OneTime}"
                                                             Style="{StaticResource IconMedium}" />
                                    </Grid>

                                    <TextBlock Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Foreground="{Binding Source={x:Static woProperties:Settings.Default}, Path=Color_Error, Mode=OneTime}"
                                               Text="{x:Static localization:Resources.KeyBinding_Settings_Action_Clear}" />
                                </Grid>
                            </ComboBoxItem.Content>
                        </ComboBoxItem>

                    </woControls:ComboBox>
                </Grid>

                <!--  Game Selector  -->
                <gameSelector:GameSelector x:Name="GameSelector"
                                           Grid.Column="1"
                                           MinWidth="190"
                                           Margin="0,0,0,5"
                                           HorizontalAlignment="Right" />
            </Grid>

            <!--  Utilities  -->
            <StackPanel Margin="0,0,0,25">
                <!--  Title  -->
                <!--<TextBlock Margin="0,0,0,15"
                                   FontWeight="Medium"
                                   Style="{StaticResource BodyMedium}"
                                   Text="{x:Static localization:Resources.KeyBinding_Utilities}" />-->

                <!--  Hide cursor  -->
                <woControls:CardToggleButton x:Name="ToggleHideCursor"
                                             Title="{x:Static localization:Resources.KeyBinding_Utilities_HideCursorOnManualClick}"
                                             MinHeight="55"
                                             Margin="0,0,0,5"
                                             Click="ToggleHideCursor_OnClick">

                    <woControls:CardToggleButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.R.EyeSlash}" Style="{StaticResource IconLarge}" />
                        </Grid>
                    </woControls:CardToggleButton.LeftIcon>
                </woControls:CardToggleButton>

                <!--  Cycle through  -->
                <woControls:CardToggleButton x:Name="ToggleCycleThrough"
                                             Title="{x:Static localization:Resources.KeyBinding_Utilities_CycleThrough}"
                                             MinHeight="55"
                                             Margin="0,0,0,5"
                                             Click="ToggleCycleThrough_OnClick">

                    <woControls:CardToggleButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ArrowsSpin}" Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardToggleButton.LeftIcon>
                </woControls:CardToggleButton>

                <!--  One dialog option behaviour  -->
                <woControls:CardComboBox x:Name="ComboBoxSingleBehaviour"
                                         MinHeight="55"
                                         Margin="0,0,0,5"
                                         d:SelectedIndex="0"
                                         ContentForeground="Secondary">

                    <woControls:CardComboBox.Title>
                        <TextBlock Text="{x:Static localization:Resources.KeyBinding_Utilities_SingleDialogOptionBehaviour}" TextWrapping="WrapWithOverflow" />
                    </woControls:CardComboBox.Title>

                    <woControls:CardComboBox.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.R.LooksOne}" Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardComboBox.LeftIcon>

                    <ComboBoxItem Content="{x:Static localization:Resources.KeyBinding_Utilities_SingleDialogOptionBehaviour_Highlight}" Tag="{x:Static behaviour:ESingleDialogOptionBehaviour.Highlight}" />
                    <ComboBoxItem Content="{x:Static localization:Resources.KeyBinding_Utilities_SingleDialogOptionBehaviour_Select}" Tag="{x:Static behaviour:ESingleDialogOptionBehaviour.Select}" />

                    <woControls:CardComboBox.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Small, Mode=OneTime}"
                                                 Data="{StaticResource I.R.ExpandMore}"
                                                 Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardComboBox.RightIcon>
                </woControls:CardComboBox>

                <!--  Numeric actions behaviour  -->
                <woControls:CardComboBox x:Name="ComboBoxNumericBehaviour"
                                         Title="{x:Static localization:Resources.KeyBinding_Utilities_NumericActionBehaviour}"
                                         MinHeight="55"
                                         Margin="0,0,0,5"
                                         d:SelectedIndex="0"
                                         ContentForeground="Secondary">

                    <woControls:CardComboBox.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ListOl}" Style="{StaticResource IconLarge}" />
                        </Grid>
                    </woControls:CardComboBox.LeftIcon>

                    <ComboBoxItem Content="{x:Static localization:Resources.KeyBinding_Utilities_NumericActionBehaviour_Highlight}" Tag="{x:Static behaviour:ENumericActionBehaviour.Highlight}" />
                    <ComboBoxItem Content="{x:Static localization:Resources.KeyBinding_Utilities_NumericActionBehaviour_Select}" Tag="{x:Static behaviour:ENumericActionBehaviour.Select}" />

                    <woControls:CardComboBox.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Small, Mode=OneTime}"
                                                 Data="{StaticResource I.R.ExpandMore}"
                                                 Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardComboBox.RightIcon>
                </woControls:CardComboBox>

                <!--  Cursor behaviour  -->
                <woControls:CardComboBox x:Name="ComboBoxCursorBehaviour"
                                         Title="{x:Static localization:Resources.KeyBinding_Utilities_CursorBehaviour}"
                                         MinHeight="55"
                                         d:SelectedIndex="0"
                                         ContentForeground="Secondary">

                    <woControls:CardComboBox.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ArrowPointer}" Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardComboBox.LeftIcon>

                    <ComboBoxItem Content="{x:Static localization:Resources.KeyBinding_Utilities_CursorBehaviour_Hide}" Tag="{x:Static behaviour:ECursorBehaviour.Hide}" />
                    <ComboBoxItem Content="{x:Static localization:Resources.KeyBinding_Utilities_CursorBehaviour_HideAfterSelection}" Tag="{x:Static behaviour:ECursorBehaviour.HideAfterSelection}" />
                    <ComboBoxItem Content="{x:Static localization:Resources.KeyBinding_Utilities_CursorBehaviour_Nothing}" Tag="{x:Static behaviour:ECursorBehaviour.Nothing}" />

                    <woControls:CardComboBox.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Small, Mode=OneTime}"
                                                 Data="{StaticResource I.R.ExpandMore}"
                                                 Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardComboBox.RightIcon>
                </woControls:CardComboBox>
            </StackPanel>

            <!--  General  -->
            <StackPanel Margin="0,0,0,25">
                <!--  Title  -->
                <TextBlock Style="{StaticResource CardTitle}" Text="{x:Static localization:Resources.KeyBinding_General}" />

                <!--  Start/Pause  -->
                <woControls:CardButton x:Name="CardButtonPauseResume"
                                       Title="{x:Static localization:Resources.KeyBinding_General_PauseResume}"
                                       MinHeight="55"
                                       Margin="0,0,0,5"
                                       Click="CardButton_PauseResume_OnClick"
                                       ContentForeground="Secondary">

                    <woControls:CardButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.PlayArrow}" Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardButton.LeftIcon>

                    <woControls:CardButton.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardButton.RightIcon>
                </woControls:CardButton>

                <!--  Restart  -->
                <woControls:CardButton x:Name="CardButtonReload"
                                       Title="{x:Static localization:Resources.KeyBinding_General_Reload}"
                                       MinHeight="55"
                                       Margin="0,0,0,5"
                                       Click="CardButton_Reload_OnClick"
                                       ContentForeground="Secondary">

                    <woControls:CardButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.Rotate}" Style="{StaticResource IconLarge}" />
                        </Grid>
                    </woControls:CardButton.LeftIcon>

                    <woControls:CardButton.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardButton.RightIcon>
                </woControls:CardButton>

                <!--  Screenshot  -->
                <woControls:CardButton x:Name="CardButtonScreenshot"
                                       Title="{x:Static localization:Resources.KeyBinding_General_Screenshot}"
                                       MinHeight="55"
                                       Margin="0,0,0,5"
                                       Click="CardButton_Screenshot_OnClick"
                                       ContentForeground="Secondary">

                    <woControls:CardButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.R.Image}" Style="{StaticResource IconLarge}" />
                        </Grid>
                    </woControls:CardButton.LeftIcon>

                    <woControls:CardButton.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardButton.RightIcon>
                </woControls:CardButton>

                <!--  Hide cursor  -->
                <woControls:CardButton x:Name="CardButtonHideCursor"
                                       Title="{x:Static localization:Resources.KeyBinding_General_HideCursor}"
                                       MinHeight="55"
                                       Click="CardButton_HideCursor_OnClick"
                                       ContentForeground="Secondary">

                    <woControls:CardButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.R.EyeSlash}" Style="{StaticResource IconLarge}" />
                        </Grid>
                    </woControls:CardButton.LeftIcon>

                    <woControls:CardButton.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardButton.RightIcon>
                </woControls:CardButton>
            </StackPanel>

            <!--  Controls  -->
            <StackPanel Margin="0,0,0,25">
                <!--  Title  -->
                <TextBlock Style="{StaticResource CardTitle}" Text="{x:Static localization:Resources.KeyBinding_Control}" />

                <!--  Select  -->
                <woControls:CardButton x:Name="CardButtonSelect"
                                       Title="{x:Static localization:Resources.KeyBinding_Control_Select}"
                                       MinHeight="55"
                                       Click="CardButton_Select_OnClick"
                                       ContentForeground="Secondary">

                    <woControls:CardButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.Check}" Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardButton.LeftIcon>

                    <woControls:CardButton.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardButton.RightIcon>
                </woControls:CardButton>

                <!--  Previous  -->
                <woControls:CardButton x:Name="CardButtonPrevious"
                                       Title="{x:Static localization:Resources.KeyBinding_Control_Previous}"
                                       MinHeight="55"
                                       Margin="0,5,0,0"
                                       Click="CardButton_Previous_OnClick"
                                       ContentForeground="Secondary">

                    <woControls:CardButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}"
                                                 Data="{StaticResource I.R.ExpandLess}"
                                                 Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardButton.LeftIcon>

                    <woControls:CardButton.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardButton.RightIcon>
                </woControls:CardButton>

                <!--  Next  -->
                <woControls:CardButton x:Name="CardButtonNext"
                                       Title="{x:Static localization:Resources.KeyBinding_Control_Next}"
                                       MinHeight="55"
                                       Margin="0,5,0,0"
                                       Click="CardButton_Next_OnClick"
                                       ContentForeground="Secondary">

                    <woControls:CardButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}"
                                                 Data="{StaticResource I.R.ExpandMore}"
                                                 Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardButton.LeftIcon>

                    <woControls:CardButton.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardButton.RightIcon>
                </woControls:CardButton>

                <!--  Last  -->
                <woControls:CardButton x:Name="CardButtonLast"
                                       Title="{x:Static localization:Resources.KeyBinding_Control_Last}"
                                       MinHeight="55"
                                       Margin="0,5,0,0"
                                       Click="CardButton_Last_OnClick"
                                       ContentForeground="Secondary">

                    <woControls:CardButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                            <woControls:PathIcon Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}"
                                                 Data="{StaticResource I.S.ArrowsTurn}"
                                                 Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardButton.LeftIcon>

                    <woControls:CardButton.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                        </Grid>
                    </woControls:CardButton.RightIcon>
                </woControls:CardButton>

            </StackPanel>

            <!--  Interaction points  -->
            <StackPanel x:Name="ContainerInteractionPointsUi" Margin="0,0,0,25">
                <!--  Title  -->
                <TextBlock Style="{StaticResource CardTitle}" Text="{x:Static localization:Resources.KeyBinding_InteractionPoints}" />

                <StackPanel x:Name="ContainerInteractionPointElements" />
            </StackPanel>

            <!--  Scripts  -->
            <StackPanel x:Name="ContainerScripts" Margin="0,0,0,25">
                <!--  Title  -->
                <TextBlock Style="{StaticResource CardTitle}" Text="{x:Static localization:Resources.KeyBinding_Scripts}" />

                <!--  Select  -->
                <woControls:CardButton x:Name="CardButtonAutoSkip"
                                       Title="{x:Static localization:Resources.KeyBinding_Control_AutoSkip}"
                                       MinHeight="55"
                                       Click="CardButton_AutoSkip_OnClick"
                                       ContentForeground="Secondary">

                    <woControls:CardButton.LeftIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.Forward}" Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardButton.LeftIcon>

                    <woControls:CardButton.RightIcon>
                        <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                            <woControls:PathIcon Data="{StaticResource I.S.Settings}" Style="{StaticResource IconMedium}" />
                        </Grid>
                    </woControls:CardButton.RightIcon>
                </woControls:CardButton>
            </StackPanel>

            <!--  Dialog options  -->
            <StackPanel>
                <!--  Title  -->
                <TextBlock Style="{StaticResource CardTitle}" Text="{x:Static localization:Resources.KeyBinding_Numeric}" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  First  -->
                    <woControls:CardButton x:Name="CardButtonOne"
                                           Title="{x:Static localization:Resources.KeyBinding_Numeric_First}"
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           MinHeight="55"
                                           Margin="0,0,0,5"
                                           Click="CardButton_First_OnClick"
                                           ContentForeground="Secondary">

                        <woControls:CardButton.LeftIcon>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.R.CommentDots}" Style="{StaticResource IconLarge}" />
                            </Grid>
                        </woControls:CardButton.LeftIcon>

                        <woControls:CardButton.RightIcon>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                            </Grid>
                        </woControls:CardButton.RightIcon>
                    </woControls:CardButton>

                    <!--  Second  -->
                    <woControls:CardButton x:Name="CardButtonTwo"
                                           Title="{x:Static localization:Resources.KeyBinding_Numeric_Second}"
                                           Grid.Row="1"
                                           Grid.Column="0"
                                           MinHeight="55"
                                           Margin="0,0,0,5"
                                           Click="CardButton_Second_OnClick"
                                           ContentForeground="Secondary">

                        <woControls:CardButton.LeftIcon>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.R.CommentDots}" Style="{StaticResource IconLarge}" />
                            </Grid>
                        </woControls:CardButton.LeftIcon>

                        <woControls:CardButton.RightIcon>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                            </Grid>
                        </woControls:CardButton.RightIcon>
                    </woControls:CardButton>

                    <!--  Third  -->
                    <woControls:CardButton x:Name="CardButtonThree"
                                           Title="{x:Static localization:Resources.KeyBinding_Numeric_Third}"
                                           Grid.Row="2"
                                           Grid.Column="0"
                                           MinHeight="55"
                                           Margin="0,0,0,5"
                                           Click="CardButton_Third_OnClick"
                                           ContentForeground="Secondary">

                        <woControls:CardButton.LeftIcon>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.R.CommentDots}" Style="{StaticResource IconLarge}" />
                            </Grid>
                        </woControls:CardButton.LeftIcon>

                        <woControls:CardButton.RightIcon>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                            </Grid>
                        </woControls:CardButton.RightIcon>
                    </woControls:CardButton>

                    <!--  Fourth  -->
                    <woControls:CardButton x:Name="CardButtonFour"
                                           Title="{x:Static localization:Resources.KeyBinding_Numeric_Fourth}"
                                           Grid.Row="3"
                                           Grid.Column="0"
                                           MinHeight="55"
                                           Margin="0,0,0,5"
                                           Click="CardButton_Fourth_OnClick"
                                           ContentForeground="Secondary">

                        <woControls:CardButton.LeftIcon>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.R.CommentDots}" Style="{StaticResource IconLarge}" />
                            </Grid>
                        </woControls:CardButton.LeftIcon>

                        <woControls:CardButton.RightIcon>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                            </Grid>
                        </woControls:CardButton.RightIcon>
                    </woControls:CardButton>

                    <!--  Fifth  -->
                    <woControls:CardButton x:Name="CardButtonFive"
                                           Title="{x:Static localization:Resources.KeyBinding_Numeric_Fifth}"
                                           Grid.Row="4"
                                           Grid.Column="0"
                                           MinHeight="55"
                                           Click="CardButton_Fifth_OnClick"
                                           ContentForeground="Secondary">

                        <woControls:CardButton.LeftIcon>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Large, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.R.CommentDots}" Style="{StaticResource IconLarge}" />
                            </Grid>
                        </woControls:CardButton.LeftIcon>

                        <woControls:CardButton.RightIcon>
                            <Grid Width="{Binding Source={x:Static woProperties:Settings.Default}, Path=FontStyle_Medium, Mode=OneTime}">
                                <woControls:PathIcon Data="{StaticResource I.S.ChevronRight}" Style="{StaticResource IconSmall}" />
                            </Grid>
                        </woControls:CardButton.RightIcon>
                    </woControls:CardButton>

